@model IEnumerable<Gestionale_Pizzeria.Models.Ordini>

@{
    ViewBag.Title = "OrdiniConfermati";
}

<div class="d-flex flex-column gap-5">
    <div>
        @Html.ActionLink("Lista Articoli", "Index", "Prodotti")
        @Html.ActionLink("Ordini Confermati", "OrdiniConfermati", "Ordini")
        @Html.ActionLink("Riepilogo", "Riepilogo", "Ordini")
    </div>
    <hr />
    <div>
        <h2 class="text-center">OrdiniConfermati</h2>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DettagliOrdine.Nota)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Utenti.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Evaso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Confermato)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DettagliOrdine.Nota)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Utenti.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prezzo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Evaso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Confermato)
        </td>
        <td>
            @Html.ActionLink("Modifica Ordine", "Edit", new { id=item.IdOrdine }) |
        </td>
    </tr>
}

</table>
