@model Gestionale_Pizzeria.Models.Ordini

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Evaso)
    @Html.HiddenFor(model => model.IdUtente)
    @Html.HiddenFor(model => model.Prezzo)
    @Html.HiddenFor(model => model.IdDettagliOrdine)
    @Html.HiddenFor(model => model.Confermato)
    @Html.HiddenFor(model => model.Utenti)
    @Html.HiddenFor(model => model.DettagliOrdine)

    <h2>Sicuro di confermare l'ordine?</h2>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crea Ordine" class="btn btn-success text-white" />
        </div>
    </div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
